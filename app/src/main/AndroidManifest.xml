<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ds.FoodScanner"
    android:installLocation="auto"
    android:versionCode="40"
    android:versionName="1.0.0">

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:hasCode="true"
        android:allowClearUserData="true"
        android:icon="@drawable/hdpi_app_icon"
        android:installLocation="auto"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="@string/config_share_file_auth"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>
        <provider
            android:name=".DocumentContentProvider"
            android:authorities="com.ds.FoodScanner"
            android:exported="false" />
        <!-- ///////////////////////////// MAIN /////////////////////////////////////////// -->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- //////////////////////////////////////////////////////////////////////// -->
        <!-- ////////////////////// OCRActivity ///////////////////////////////////// -->
        <activity
            android:name=".OCRActivity"
            android:launchMode="singleTop" />
        <!-- //////////////////////////////////////////////////////////////////////// -->
        <!-- /////////////////////// DocumentActivity /////////////////////////////// -->
        <activity
            android:name="com.ds.documentview.DocumentActivity"
            android:configChanges="keyboardHidden|keyboard"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ds.FoodScanner.MainActivity" />
        </activity>
        <!-- //////////////////////////////////////////////////////////////////////// -->
        <!-- /////////////////////////// HelpActivity /////////////////////////////// -->
        <activity
            android:name=".help.HelpActivity"
            android:label="@string/tips">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ds.FoodScanner.MainActivity" />
        </activity>
        <!-- //////////////////////////////////////////////////////////////////////// -->
        <!-- //////////////////////// OCRLanguageActivity /////////////////////////// -->
        <activity
            android:name=".help.OCRLanguageActivity"
            android:label="@string/ocr_language_title">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ds.FoodScanner.MainActivity" />
        </activity>
        <!-- //////////////////////////////////////////////////////////////////////// -->
        <!-- ////////////////////// TableOfContentsActivity ///////////////////////// -->
        <activity
            android:name="com.ds.documentview.TableOfContentsActivity"
            android:label="@string/toc_title">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ds.documentview.DocumentActivity" />
        </activity>
        <!-- //////////////////////////////////////////////////////////////////////// -->
        <!-- /////////////////////////// InstallActivity //////////////////////////// -->
        <activity
            android:name="com.ds.install.InstallActivity"
            android:label="@string/toc_title"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <!-- //////////////////////////////////////////////////////////////////////// -->
        <!-- /////////////////////////// CropImageActivity ////////////////////////// -->
        <activity
            android:name=".cropimage.CropImageActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/crop_title"
            android:uiOptions="splitActionBarWhenNarrow" />
        <!-- //////////////////////////////////////////////////////////////////////// -->

        <service android:name=".help.OCRLanguageInstallService" />

        <receiver android:name=".help.DownloadBroadCastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.DOWNLOAD_COMPLETE" />
            </intent-filter>
        </receiver>

        <!-- //////////////////////////////////////////////////////////////////////// -->
        <!-- ////////////////////////// LicenseActivity ///////////////////////////// -->
        <activity
            android:name=".help.LicenseActivity"
            android:label="@string/pref_title_license">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ds.FoodScanner.help.AboutActivity" />
        </activity>
        <!-- //////////////////////////////////////////////////////////////////////// -->
        <!-- /////////////////////////// AboutActivity ////////////////////////////// -->
        <activity
            android:name=".help.AboutActivity"
            android:label="@string/about">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ds.FoodScanner.MainActivity" />
        </activity>
        <!-- //////////////////////////////////////////////////////////////////////// -->
        <!-- ///////////////////////// FullScannerActivity ////////////////////////// -->
        <activity
            android:name=".BarcodeScanner.FullScannerActivity"
            android:label="Barcode Scanner"
            android:theme="@style/AppOverlayTheme"
            android:uiOptions="splitActionBarWhenNarrow">
            <meta-data
                android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
        </activity>
        <!-- //////////////////////////////////////////////////////////////////////// -->
        <!-- ///////////////////////// ResultActivity ////////////////////////// -->
        <activity android:name=".ResultActivity"
            android:label="@string/Results">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ds.FoodScanner.MainActivity" />
        </activity>
        <!-- //////////////////////////////////////////////////////////////////////// -->
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="ef8b77a0fd2ef3e87c78497b9595a9234fe5b711" />
    </application>

</manifest>